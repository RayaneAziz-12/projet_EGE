{% extends 'base.html.twig' %}

{% block title %}Hello MatiereController!{% endblock %}

{% block body %}
    {{ include('common/page-top.html.twig') }}
     <div class="section-body">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center ">
                <div class="header-action">
                    <h1 class="page-title">Matieres</h1>
                    <ol class="breadcrumb page-breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ school_name }}</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Matieres</li>
                    </ol>
                </div>
                <ul class="nav nav-tabs page-header-tab">
                    <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#Courses-all">Matieres </a></li>
                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Courses-add">Ajouter une matiere</a></li>
                </ul>
            </div>
        </div>
    </div>
 <div class="section-body mt-4">
        <div class="container-fluid">
            <div class="tab-content">
                <div class="tab-pane active" id="Courses-all">
                    <div class="row row-deck">
                            <div class="col-xl-4 col-lg-4 col-md-6">
                                <div class="card">
                                    <a href="#"><img class="card-img-top" src="../assets/images/gallery/logoSvt.jpg" alt=""></a>
                                    <div class="card-body d-flex flex-column">
                                        <h5><a href="courses-details.html"></a></h5>
                                        <div class="text-muted"></div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-flex align-items-center mt-auto">
                                            <img class="avatar avatar-md mr-3" src="../assets/images/xs/avatar1_femme.png" alt="avatar">
                                            <div>
                                                <a href="#">Pro. Jane</a>
                                                <small class="d-block text-muted">Resp de la formation.</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
                <div class="tab-pane" id="Courses-add">
                <div class="card">
         <div class="col-lg-8 col-md-12 col-sm-12">
        <div class="tab-pane" id="Courses-add-Boot">
        <h3 class="card-title">Formulaire d'ajout des matières</h3>
        <form  method="post" action="{{ path('etudiant_new') }}">
        <div class="card-body" style="display: block">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Nom de la matière <span class="text-danger">*</span></label>
                <div class="col-md-9">
                    <input type="text" class="form-control" placeholder="Entrez le nom de la matière" name="nom" id="nom" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Intitule de la matiere<span class="text-danger">*</span></label>
                <div class="col-md-9">
                    <input type="text" class="form-control" placeholder="Entrez l'intitulé de la matière" name="intmatiere" id="intmatiere" required>
                    <small class="msgPrenom"></small>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Formation<span class="text-danger">*</span></label>
                <div class="col-md-9">
                    <select class="form-control input-height" name="sexe" id="sexe" required>
                        <option value="">Choisir une formation</option>
                        
                            <option value="Sixième">Sixième</option>
                            <option value="Sixième">Cinquième</option>
                            <option value="Sixième">Quatrieme</option>

                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">Responsable <span class="text-danger">*</span></label>
                <div class="col-md-9">
                    <select class="form-control input-height" name="respoMatiere" id="respoMatiere" required>
                        <option value="">Choisir le responsable de la matiere</option>

                            <option value="Sixième">Pro.Jane</option>
                            <option value="Sixième">Pro.Richard</option>
                            <option value="Sixième">Pro.Boris</option>

                    </select>
                </div>
            </div>
            <div class="col-sm-12">
                <button type="button" id="suivant" onclick=""  class="btn btn-primary"  >Soumettre</button>
                <button type="button" class="btn btn-outline-secondary" id="modifier">Modifier</button>
            </div>
        </div>
    </div>
</div>
</form>

                            
{% endblock %}
